<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ConfirmEventActivity">

    <ImageView
        android:id="@+id/confirm_event_imagem"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/balada_padrao"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/confirm_event_name_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="NOME DO EVENTO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_event_imagem" />

    <TextView
        android:id="@+id/confirm_event_name_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nome Local - Cidade, SP"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/confirm_event_name_event"
        app:layout_constraintTop_toBottomOf="@+id/confirm_event_name_event" />

    <TextView
        android:id="@+id/confirm_event_name_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="19 de outubro de 2018, 18h - 20 de outubro de 2018, 01h"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/confirm_event_name_local"
        app:layout_constraintTop_toBottomOf="@+id/confirm_event_name_local" />

    <Button
        android:id="@+id/confirm_event_button_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Confirmar Presença"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/confirm_event_name_date"
        app:layout_constraintTop_toBottomOf="@+id/confirm_event_name_date" />

    <android.support.v7.widget.CardView
        android:id="@+id/confirm_event_cardview"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#f0f0f0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_event_button_confirm">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp" >

            <TextView
                android:id="@+id/confirm_event_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Descrição do evento"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/confirm_event_description_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/confirm_event_description"
                app:layout_constraintTop_toBottomOf="@+id/confirm_event_description" />
        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>